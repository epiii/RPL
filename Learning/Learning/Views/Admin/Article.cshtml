@model Learning.Models.DbHandler

@{
    ViewBag.Title = "Article";
}

<div class="container">
    <div class="form-group"></div>
    <div class="form-group"></div>
    <br />
    <br />
    <div class="form-group col-md-2">
        <input type="submit" value="Process" class="btn btn-primary" />
    </div>
    <br />
    <br />
    <div class="col-md-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Year</th>
                    <th>Status</th>
                    <!--<th class="col-md-2">Action</th>-->
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i <= int.Parse((Model.listArtikel.Count.ToString())) - 1; ++i)
                {
                <tr>
                    <th scope="row">@Model.listArtikel[i].idArtikel.ToString()</th>
                    <td>@Model.listArtikel[i].judulArtikel.ToString()</td>
                    <td>@Model.listArtikel[i].penulisArtikel.ToString()</td>
                    <td>@Model.listArtikel[i].tahun.ToString()</td>
                    <td>@Model.listArtikel[i].statusArtikel.ToString()</td>
                    <!--
                    <td>
                        <input type="submit" value="Edit" class="btn btn-success" />
                        <input type="submit" value="Delete" class="btn btn-danger" />


                    </td>
                    -->
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

